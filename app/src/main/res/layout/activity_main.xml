<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="149dp"
            android:layout_height="184dp" app:srcCompat="@mipmap/ic_fingerprint" android:id="@+id/fpImage"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="TODO"
            app:layout_constraintBottom_toTopOf="@+id/cardView2"/>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/cardView2" android:background="#FAFAFA">
        <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/btnFPAuth2"
                android:layout_gravity="center" android:padding="20dp"
                android:text="Press For FingerPrint Authentication" android:textSize="14sp" android:layout_margin="8dp"
                android:textColor="#FDFDFD" android:gravity="center" android:background="@color/white"
                tools:ignore="TextContrastCheck" android:backgroundTint="#FD3F03"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>